# .editorconfig

# 根级别配置
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript 和 TypeScript 文件的特定配置
[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

# JSON 文件的特定配置
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件的特定配置
[*.md]
max_line_length = off
trim_trailing_whitespace = false